# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Spredict - interpolate.cfg - settings for interpolation: parameters per methods and models
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

# -------------------------------------------- MOFFAT ----------------------------------------------

[MOFFAT]

# ----------------------------------- POLYFIT Polynomial fitting ----------------------------------- 
[MOFFAT.function]

# --- Parameters
#PARAMS = ["beta", "FWHM", ["e1", "e2"]]
PARAMS = ["beta"]

# --- Options
PREDICTED_VALUES = {}

# ----------------------------------- POLYFIT Polynomial fitting ----------------------------------- 
[MOFFAT.polyfit]

# --- Parameters
#PARAMS = ["beta", "FWHM", ["e1", "e2"]]
PARAMS = ["FWHM", ["e1", "e2"]]

# --- Options
DEGREE = {"beta":3, "FWHM":3, "e1":3, "e2":3}


# ---------------------------------------- BSPLINE fitting -----------------------------------------
[MOFFAT.BSPLINE]

# --- Parameters
#PARAMS = ["beta", "FWHM", "e1", "e2"]
PARAMS = []

# --- Options
DEGREE = {"FWHM":3}
SMOOTH = {"beta":None, "FWHM":None, "e1":None, "e2":None}


# ----------------------------------- IDW: Inverse Distance Weighting ------------------------------
[MOFFAT.IDW]

# --- Parameters
#PARAMS = ["beta", "FWHM", "e1", "e2"]
PARAMS = []

# --- Options
DISTANCE_EXPONENT = {"beta":2,  "FWHM":2,   "e1":2,  "e2":2}
MIN_OBJECTS       = {"beta":50, "FWHM":50,  "e1":50, "e2":50}  
MAX_OBJECTS       = {"beta":60, "FWHM":100, "e1":60, "e2":60}  



# ------------------------------------- RBF: Radial Basis Functions --------------------------------
[MOFFAT.RBF]

# --- Parameters
#PARAMS = ["beta", "FWHM", "e1", "e2"]
PARAMS = []

# --- Options

# ------------------ Kernels -------------------
# multiquadric: sqrt((r/self.epsilon)**2 + 1)
# inverse: 1.0/sqrt((r/self.epsilon)**2 + 1)
# gaussian: exp(-(r/self.epsilon)**2)
# linear: r
# cubic: r**3
# quintic: r**5
# thin_plate: r**2 * log(r)
# ----------------------------------------------
KERNEL = {"beta":"linear", "FWHM":"thin-plate", "e1":"linear", "e2":"linear"}

# --- Min & Max number of objects to use
MIN_OBJECTS = {"beta":35, "FWHM":25, "e1":25, "e2":25}
MAX_OBJECTS = {"beta":40, "FWHM":35, "e1":35, "e2":35}            

# --- Distances
DIST_INCREMENT = {"beta":0.025, "FWHM":0.025, "e1":0.025, "e2":0.025}
MAX_DISTANCE   = {"beta":2, "FWHM":2, "e1":2, "e2":2}    
DISTANCE_TOL   = {"beta":0.025, "FWHM":0.025, "e1":0.025, "e2":0.025} 

# --- Adjustable constant for gaussian or multiquadrics functions ---
#    [defaults to approximate average distance between nodes]
EPSILON =  {"beta":None, "FWHM":None, "e1":None, "e2":None}




